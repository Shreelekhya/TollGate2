<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#CB4335"
        android:orientation="vertical"
        >





        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="#e8e8e7"
            android:orientation="horizontal"
            android:layout_alignParentTop="true">



            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toll Wallet"
                android:textColor="#CB4335"
                android:layout_marginLeft="25dp"
                android:textSize="18sp"
                android:textStyle="bold"

                android:layout_gravity="center_horizontal|center_vertical"/>



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:gravity="right"
                android:orientation="horizontal" >
                <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Out"
                    android:textColor="#CB4335"
                    android:layout_marginLeft="25dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:onClick="signout"
                    android:layout_gravity="center_horizontal|center_vertical"/>


            </LinearLayout>
        </LinearLayout>


        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical"
            android:background="@drawable/greybackground"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:text="Amount in your account:"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/editText4"
                    android:textColor="#2582C5"
                    android:textSize="18dp"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="50"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/editText3"

                    android:textColor="#2582C5"
                    android:textSize="18dp"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="2dp" />
            </LinearLayout>
            <TextView
                android:layout_width="360dp"
                android:layout_height="40dp"
                android:text="Click the button below to make payment"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/editText5"
                android:textColor="#2582C5"
                android:textSize="18dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp" />


            <Button android:layout_width="170dp"
                android:layout_height="38dp"
                android:layout_gravity="right"
                android:onClick="Next1"
                android:layout_marginTop="160dp"
                android:text="ADD MONEY TO WALLET"
                android:textColor="#fff"
                android:background="@drawable/btn"/>





        </LinearLayout>


    </LinearLayout>



</HorizontalScrollView>




